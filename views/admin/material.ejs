<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js"></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    />
    <title>Material_Admin</title>
  </head>

  <body data-bs-spy="scroll" data-bs-target=".navbar" data-bs-offset="100">
    <!-- header strart -->
    <header>
      <a href="#" class="logo"
        ><i class="fas-fa-untensils"
          ><img src="../../assets/imgs/logo.png" alt="" />ScheduleUet</i
        ></a
      >
      <nav class="navbar">
        <a href="/admin/courses">Course</a>
        <a href="/admin/sections">Section</a>
        <a href="/admin/teachers">Teacher</a>
        <a href="/admin/materials">Study material</a>
        <a href="/admin/accounts">Account</a>
      </nav>

      <div class="icons">
        <i class="fas fa-bars" id="menu-bars"></i>
        <i class="fas fa-search" id="search-icon"></i>
        <div class="dropdown">
          <i class="fa-regular fa-user" id="user-icon"></i>
          <div class="dropdown-content">
            <a href="/logout"
              >Logout
              <i
                id="log-out_icon"
                class="fa-solid fa-arrow-right-from-bracket"
              ></i>
            </a>
          </div>
        </div>
      </div>
    </header>

    <form action="" id="search-form">
      <input
        type="search"
        placeholder="search here..."
        name=""
        id="search-box"
      />
      <label for="search-box" class="fas fa-search"></label>
      <i class="fas fa-times" id="close"></i>
    </form>
    <!-- header end!! -->

    <!-- Calendarsection start -->

    <!-- Calendarsection end ! -->

    <!-- Registrationsection start -->

    <!-- Registrationsection end ! -->

    <!-- Modal_edit_registration Layout End -->

    <!-- Registrationsection end ! -->

    <!-- study_material strart-->
    <section class="study_material" id="study_material">
      <h1>Material God</h1>
      
      <div class="search_and_filter_material">
        <div class="search_material">
            <div class="search_material-selection">
                <div class="icon_material-selection">
                    <i onclick="search_Material()" class="fa-solid fa-magnifying-glass"></i>
                </div>
            </div>
            <input type="text" id="myInput_material" placeholder="Search material....">
        </div>
        <div class="filer_material">
            <button onclick="myFunctionFilter()" class="filter_btn">Filter
                <i class="fa-solid fa-filter"></i> </button>
            <div id="myFilter_content" class="filter_content">
              <a><input id="courseID_checkbox" class="searchCheckBox" type="checkbox">courseId</a>
              <a><input id="materialID_checkbox" class="searchCheckBox" type="checkbox">materialID</a>
              <a><input id="name_checkbox" class="searchCheckBox" type="checkbox">name</a>
              <a><input id="courseTitle_checkbox" class="searchCheckBox" type="checkbox">courseTitle</a>
              <a><input id="author_checkbox" class="searchCheckBox" type="checkbox">author</a>
              <a><input id="publisher_checkbox" class="searchCheckBox" type="checkbox">publisher</a>
              <a><input id="publishYear_checkbox" class="searchCheckBox" type="checkbox">publishYear</a>
            </div>
        </div>  
    </div>


      <div class="material_table_data">
        <table id="myTable_data_material">
          <thead>
            <tr class="header">
              <th>courseID</th>
              <th>materialID</th>
              <th>name</th>
              <th>link</th>
              <th>courseTitle</th>
              <th>author</th>
              <th>publisher</th>
              <th>publishYear</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>

            <% for (let i = 0; i < data.length; i++) { %>
              <tr>
                <td id="courseID-<%= i %>"><%= data[i].courseID %></td>
                <td id="materialID-<%= i %>"><%= data[i].materialID %></td>
                <td id="name-<%= i %>"><%= data[i].name %></td>
                <td id="link-<%= i %>"><%= data[i].link %></td>
                <td id="courseTitle-<%= i %>"><%= data[i].courseTitle %></td>
                <td id="author-<%= i %>"><%= data[i].author %></td>
                <td id="publisher-<%= i %>"><%= data[i].publisher %></td>
                <td id="publishYear-<%= i %>"><%= data[i].publishYear %></td>
                <td>
                  <i
                    onclick="openEditTab(this)"
                    id="icon_add_material_<%= i %>"
                    class="icon_add_material fa-regular fa-pen-to-square"
                  ></i>
                </td>
                <td>
                  <i
                    onclick="deleteData_Material(this)"
                    id="icon_delete_material_<%= i %>"
                    class="icon_delete_material fa-solid fa-trash"
                  ></i>
                </td>
              </tr>
            <% } %>

          </tbody>
        </table>
      </div>
      <div class="container_add_material">
        <button id="addtable_material_admin" class="button_add_material">
          Add
        </button>
      </div>
    </section>

    <div action="" id="modal_material" class="modal_material">
      <div class="modal_material__overlay"></div>
      <div class="modal_material__body">
        <div class="form_material_add">
          <div class="form_material_add__container">
            <div class="form_material_add_header">
              <h3 class="form_material_add_heading">Add material</h3>
            </div>
            <div class="form_material_add_body">
              <div class="form_material_add_group">
                <input
                  type="text"
                  id="courseID_addInput"
                  class="form_material_add_Input"
                  placeholder="Enter new courseID"
                />
              </div>
              <div class="form_material_add_group">
                <input
                  type="text"
                  id="materialID_addInput"
                  class="form_material_add_Input"
                  placeholder="Enter new materialID"
                />
              </div>
              <div class="form_material_add_group">
                <input
                  type="text"
                  id="name_addInput"
                  class="form_material_add_Input"
                  placeholder="Enter new name"
                />
              </div>
              <div class="form_material_add_group">
                <input
                  type="text"
                  id="link_addInput"
                  class="form_material_add_Input"
                  placeholder="Enter new link"
                />
              </div>
              <div class="form_material_add_group">
                <input
                  type="text"
                  id="courseTitle_addInput"
                  class="form_material_add_Input"
                  placeholder="Enter new courseTitle"
                />
              </div>
              <div class="form_material_add_group">
                <input
                  type="text"
                  id="author_addInput"
                  class="form_material_add_Input"
                  placeholder="Enter author"
                />
              </div>
              <div class="form_material_add_group">
                <input
                  type="text"
                  id="publisher_addInput"
                  class="form_material_add_Input"
                  placeholder="Enter publisher"
                />
              </div>
              <div class="form_material_add_group">
                <input
                  type="text"
                  id="publishYear_addInput"
                  class="form_material_add_Input"
                  placeholder="Enter publishYear"
                />
              </div>
            </div>
            <div class="form_material_add_btn">
              <button
                onclick="addData_Material()"
                id="addbutton_material"
                class="button btn--disable"
              >
                Add
              </button>
            </div>
          </div>
        </div>
      </div>
      <i class="fas fa-times" id="close_add_material"></i>
    </div>
    <!-- Modal_add_registration Layout End -->

    <!-- Modal_edit_course Layout Start -->
    <div action="" id="modal_1_material" class="modal_1_material">
      <div class="modal_1_material__overlay"></div>
      <div class="modal_1_material__body">
        <div class="form_material_edit">
          <div class="form_material_edit__container">
            <div class="form_material_edit_header">
              <h3 class="form_material_edit_heading">Edit material</h3>
            </div>
            <div class="form_material_edit_body">
              <div class="form_material_edit_group">
                <input
                  type="text"
                  id="courseID_editInput"
                  class="form_material_edit_Input"
                  placeholder="Enter new courseID"
                />
              </div>
              <div class="form_material_edit_group">
                <input
                  type="text"
                  id="materialID_editInput"
                  class="form_material_edit_Input"
                  placeholder="Enter new materialID"
                />
              </div>
              <div class="form_material_edit_group">
                <input
                  type="text"
                  id="name_editInput"
                  class="form_material_edit_Input"
                  placeholder="Enter new name"
                />
              </div>
              <div class="form_material_edit_group">
                <input
                  type="text"
                  id="link_editInput"
                  class="form_material_edit_Input"
                  placeholder="Enter new link"
                />
              </div>
              <div class="form_material_edit_group">
                <input
                  type="text"
                  id="courseTitle_editInput"
                  class="form_material_edit_Input"
                  placeholder="Enter new courseTitle"
                />
              </div>
              <div class="form_material_edit_group">
                <input
                  type="text"
                  id="author_editInput"
                  class="form_material_edit_Input"
                  placeholder="Enter author"
                />
              </div>
              <div class="form_material_edit_group">
                <input
                  type="text"
                  id="publisher_editInput"
                  class="form_material_edit_Input"
                  placeholder="Enter publisher"
                />
              </div>
              <div class="form_material_edit_group">
                <input
                  type="text"
                  id="publishYear_editInput"
                  class="form_material_edit_Input"
                  placeholder="Enter publishYear"
                />
              </div>
            </div>
            <div class="form_material_edit_btn">
              <button
                onclick="editData_Material()"
                id="updatebutton_material"
                class="button btn--disable"
              >
                Update
              </button>
            </div>
          </div>
        </div>
      </div>
      <i class="fas fa-times" id="close_edit_material"></i>
    </div>
    <!-- Modal_edit_course Layout End -->

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="/script/adminPages/material.js"></script>
  </body>
</html>
