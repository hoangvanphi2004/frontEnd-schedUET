<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    />
    <title>Teacher_Admin</title>
  </head>

  <body data-bs-spy="scroll" data-bs-target=".navbar" data-bs-offset="100">
    <!-- header strart -->
    <header>
      <a href="#" class="logo"
        ><i class="fas-fa-untensils"
          ><img src="../../assets/imgs/logo.png" alt="" />ScheduleUet</i
        ></a
      >
      <nav class="navbar">
        <a href="/admin/courses">Course</a>
        <a href="/admin/sections">Section</a>
        <a href="/admin/teachers">Teacher</a>
        <a href="/admin/materials">Study material</a>
        <a href="/admin/accounts">Account</a>
      </nav>

      <div class="icons">
        <i class="fas fa-bars" id="menu-bars"></i>
        <i class="fas fa-search" id="search-icon"></i>
        <div class="dropdown">
          <i class="fa-regular fa-user" id="user-icon"></i>
          <div class="dropdown-content">
            <a href="/logout"
              >Logout
              <i
                id="log-out_icon"
                class="fa-solid fa-arrow-right-from-bracket"
              ></i>
            </a>
          </div>
        </div>
      </div>
    </header>

    <form action="" id="search-form">
      <input
        type="search"
        placeholder="search here..."
        name=""
        id="search-box"
      />
      <label for="search-box" class="fas fa-search"></label>
      <i class="fas fa-times" id="close"></i>
    </form>
    <!-- header end!! -->

    <!-- Calendarsection start -->

    <!-- Calendarsection end ! -->

    <!-- Registrationsection start -->
    <!-- Registrationsection start -->
    <section class="teacher" id="teacher">
      <div class="admin_teacher">
        <h1>Teacher Admin</h1>
      </div>
      <div class="search_teacher">
        <div class="search_teacher-selection">
          <div class="icon_search_teacher-selection">
            <i class="fa-solid fa-magnifying-glass"></i>
          </div>
        </div>
        <input
          type="text"
          id="myInput_teacher"
          onkeyup="myFunctionTeacher()"
          placeholder="Search teacher...."
        />
      </div>
      <div class="teacher_table_data">
        <table id="teacher_table">
          <thead>
            <tr class="header">
              <th>TeacherId</th>
              <th>Name</th>
              <th>Email</th>
              <th>Facucity</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>1</td>
              <td>NVT</td>
              <td>22028182@vnu.edu.vn</td>
              <td>FIT</td>
              <td>
                <i
                  id="icon_add_teacher"
                  class="fa-regular fa-pen-to-square"
                ></i>
              </td>
              <td>
                <i
                  onclick="deletetable_teacher(this)"
                  id="icon_delete_teacher"
                  class="fa-solid fa-trash"
                ></i>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <!-- button save -->
      <div class="container">
        <button id="addtable_teacher_admin" class="button_add_teacher_admin">
          Add
        </button>
      </div>
      <!-- button save -->

      <!-- danh sach mon da dang ki -->
      <!-- danh sach mon da dang ki -->
    </section>
    <!-- Registrationsection end ! -->

    <div action="" id="modal_teacher" class="modal_teacher">
      <div class="modal_teacher__overlay"></div>
      <div class="modal_teacher__body">
        <div class="form_teacher_add">
          <div class="form_teacher_add__container">
            <div class="form_teacher_add_header">
              <h3 class="form_teacher_add_heading">Add teacher</h3>
            </div>
            <div class="form_teacher_add_body">
              <div class="form_teacher_add_group">
                <input
                  type="text"
                  id="id_teacher_addInput"
                  class="form_teacher_add_Input"
                  placeholder="Enter new teacherId"
                />
              </div>
              <div class="form_teacher_add_group">
                <input
                  type="text"
                  id="nameteacher_teacher_addInput"
                  class="form_teacher_add_Input"
                  placeholder="Enter new Nameteacher"
                />
              </div>
              <div class="form_teacher_add_group">
                <input
                  type="text"
                  id="email_teacher_addInput"
                  class="form_teacher_add_Input"
                  placeholder="Enter new email"
                />
              </div>
              <div class="form_teacher_add_group">
                <input
                  type="text"
                  id="facucity_teacher_addInput"
                  class="form_teacher_add_Input"
                  placeholder="Enter new facucity"
                />
              </div>
            </div>
            <div class="form_teacher_add_btn">
              <button
                onclick="addData_Teacher()"
                id="addbutton_teacher"
                class="button btn--disable"
              >
                Add
              </button>
            </div>
          </div>
        </div>
      </div>
      <i class="fas fa-times" id="close_add_teacher"></i>
    </div>
    <!-- Modal_add_registration Layout End -->

    <!-- Modal_edit_course Layout Start -->
    <div action="" id="modal_1_teacher" class="modal_1_teacher">
      <div class="modal_1_teacher__overlay"></div>
      <div class="modal_1_teacher__body">
        <div class="form_teacher_edit">
          <div class="form_teacher_edit__container">
            <div class="form_teacher_edit_header">
              <h3 class="form_teacher_edit_heading">Edit teacher</h3>
            </div>
            <div class="form_teacher_edit_body">
              <div class="form_teacher_edit_group">
                <input
                  type="text"
                  id="id_teacher_editInput"
                  class="form_teacher_edit_Input"
                  placeholder="Enter new teacherId"
                />
              </div>
              <div class="form_teacher_edit_group">
                <input
                  type="text"
                  id="nameteacher_teacher_editInput"
                  class="form_teacher_edit_Input"
                  placeholder="Enter new Nameteacher"
                />
              </div>
              <div class="form_teacher_edit_group">
                <input
                  type="text"
                  id="email_teacher_editInput"
                  class="form_teacher_edit_Input"
                  placeholder="Enter new email"
                />
              </div>
              <div class="form_teacher_edit_group">
                <input
                  type="text"
                  id="facucity_teacher_editInput"
                  class="form_teacher_edit_Input"
                  placeholder="Enter new facucity"
                />
              </div>
            </div>
            <div class="form_teacher_edit_btn">
              <button
                onclick="editData_Teacher()"
                id="updatebutton_teacher"
                class="button btn--disable"
              >
                Update
              </button>
            </div>
          </div>
        </div>
      </div>
      <i class="fas fa-times" id="close_edit_teacher"></i>
    </div>
    <!-- Modal_edit_course Layout End -->

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="/script/adminPages/teacher.js"></script>
  </body>
</html>
